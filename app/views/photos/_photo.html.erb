<% if current_user == photo.user || current_user == photo.item.user %>
  <% delete = "#{link_to(fa_icon('trash'), item_photo_path(photo.item, photo),
                      method: :delete, data: {confirm: 'a_u_shure'}) }" %>
<% end %>

<%= link_to image_tag(photo.photo_url, size: "150x150"), photo.photo_url,
            data: {lightbox: 'photos', title: delete} %>
