<div class="row justify-content-center mt-md-5 mb-md-5">
  <div class="col-md-5">
    <div class="card shadow-lg">
      <div class="card-header mb-3">
        <h2 class="text-center text-secondary"><%= t('.sign') %></h2>
      </div>

      <div class="container shadow-lg">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        label: false,
                        autofocus: true,
                        placeholder: 'email@email.com',
                        input_html: {autocomplete: "email"} %>
            <%= f.input :password,
                        required: false,
                        label: false,
                        placeholder: 'password',
                        input_html: {autocomplete: "current-password"} %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t('.sign_in'), class: 'btn btn-outline-success mb-3' %>
          </div>
        <% end %>
      </div>

      <div class="card-footer text-muted small">
        <span><%= link_to t('.forgot_pass'), new_password_path(resource_name) %></span>
        <span><%= link_to t('.havent_acc'), new_registration_path(resource_name), class: 'float-right' %></span>
      </div>
    </div>
  </div>
</div>
