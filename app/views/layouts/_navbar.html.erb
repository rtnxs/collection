          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% I18n.available_locales.reject { |l| l == I18n.locale }.each do |l| %>
              <%= content_tag :div do %>
                <a href=" <%= url_for(locale: l,) %> " class="dropdown-item">
                  <%= image_tag("#{l}.png") %>
