        <li class="nav-item active">
          <%= link_to t('views.type'), types_path, class: 'nav-link' if current_user %>
        </li>
      </ul>

      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to image_tag(user_avatar(current_user), size: "40x40",
                                  alt: "#{t('views.profile')}", class: "rounded-circle"), user_path(current_user) %>
          </li>
          <li class="nav-item active">
            <%= link_to image_tag(('logout.jpg'), size: "40x40", class: "rounded-circle ml-2 mr-2"),
