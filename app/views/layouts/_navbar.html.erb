  <div class="container">
    <div class="collapse navbar-collapse w-100 order-3">

      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to t('views.home'), root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item active">
          <%= link_to t('views.collection'), items_path, class: 'nav-link' %>
