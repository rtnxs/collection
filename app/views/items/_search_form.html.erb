<%= search_form_for @q, builder: SimpleForm::FormBuilder,
                    wrapper: :inline_form,
                    html: {class: "form-inline"} do |f| %>
  <%= f.input :name_cont, label: false, placeholder: t('simple_form.placeholder.search_cont') %>
  <%= f.input :type_name_cont, label: false, collection: Type.all.map(&:name) %>
  <%= f.submit t('simple_form.search'), class: "btn btn-outline-secondary" %>
  <%= link_to fa_icon('eraser'), items_path, class: "btn btn-outline-secondary" %>
<% end %>
