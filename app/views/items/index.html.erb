<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Year</th>
      <th>Type</th>
      <th>User</th>
      <th>Price current</th>
      <th>Price purchase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.city %></td>
        <td><%= item.year %></td>
        <td><%= item.type_id %></td>
        <td><%= item.user_id %></td>
        <td><%= item.price_current %></td>
        <td><%= item.price_purchase %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
