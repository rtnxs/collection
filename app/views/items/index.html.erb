<div class="row">
  <div class="col-4">
    <% if current_user %>
      <%= link_to t('views.new_item'), new_item_path, class: 'btn btn-outline-info' %>
    <% end %>
  </div>
  <div class="col-auto">
    <%= render 'search_form' %>
  </div>
</div>

<% @items.each_with_index do |item, i| %>
  <div class="<%= back_side(i) %> container mt-5 border_rad20">
    <div class="row d-flex <%= direct_cont(i) %> justify-content-between">
      <div class="col-sm-6 m-auto text-center">
        <h3><%= item.name %></h3>
        <h3><%= item.type.name %></h3>
        <h3><%= item.user.name %></h3>
      </div>
      <% if item.type.name.downcase == 'coin' %>
        <%= render partial: 'items/coin_type', locals: { item: item } %>
      <% elsif item.type.name.downcase == 'mark' %>
        <%= render partial: 'items/mark_type', locals: { item: item } %>
      <% else %>
        <%= render partial: 'items/default_type', locals: { item: item } %>
      <% end %>
    </div>
  </div>
<% end %>
